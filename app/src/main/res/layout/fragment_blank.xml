<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="txcap.com.viewdemo.CustomView.BlankFragment">



  <txcap.com.viewdemo.view.SlowScrollView
      android:id="@+id/scroll_view"
      android:layout_width="match_parent"
      android:layout_height="800dp"
      android:background="@color/colorPrimary">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="800dp"
          android:orientation="vertical">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="44dp"
              android:paddingLeft="20dp"
              android:paddingRight="20dp"
              android:layout_marginTop="33dp"
              android:background="#FFF"
              android:gravity="center_vertical">
              <TextView
                  android:id="@+id/title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="时代直播"
                  android:textSize="32sp"
                  android:textColor="#333333"
                  android:layout_centerVertical="true"
                  android:textStyle="bold"/>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:layout_alignParentRight="true">
                  <ImageView
                      android:id="@+id/iv_live"
                      android:layout_width="36dp"
                      android:layout_height="36dp"
                      android:src="@drawable/live"/>
                  <ImageView
                      android:id="@+id/iv_search"
                      android:layout_width="36dp"
                      android:layout_height="36dp"
                      android:src="@drawable/search"
                      android:layout_marginLeft="12dp"/>
              </LinearLayout>
          </RelativeLayout>
          <txcap.com.viewdemo.CustomView.MeasureListview
              android:id="@+id/listview"
              android:layout_width="300dp"
              android:layout_height="300dp"
              android:layout_gravity="center_horizontal"
              android:background="@color/colorAccent"></txcap.com.viewdemo.CustomView.MeasureListview>

          <LinearLayout
              android:layout_width="300dp"
              android:layout_height="500dp"
              android:layout_gravity="center_horizontal"
              android:background="@color/seafoam"
              android:layout_marginTop="30dp"></LinearLayout>
      </LinearLayout>
  </txcap.com.viewdemo.view.SlowScrollView>
    <RelativeLayout
        android:id="@+id/rl_title_small"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:background="#FFF">
        <TextView
            android:id="@+id/title_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时代直播"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/iv_live_small"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/live"/>
            <ImageView
                android:id="@+id/iv_search_small"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/search"
                android:layout_marginLeft="12dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
